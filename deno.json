{
  "version": "1.0.0",
  "lock": false,
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "http/": "https://deno.land/std@0.208.0/http/",
    "supabase": "https://esm.sh/@supabase/supabase-js@2"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "deno.window"
    ],
    "target": "ES2020"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch supabase/functions/chat/index.ts",
    "start": "deno run --allow-net --allow-env --allow-read supabase/functions/chat/index.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test --allow-net --allow-env --allow-read"
  },
  "fmt": {
    "semiColons": true,
    "singleQuote": true,
    "lineWidth": 100,
    "indentWidth": 2
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}
